// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "model_parameters": [],
    "expand_edit_card": false,
  },
  "word_diff_enabled": false,
  "ensure_final_newline_on_save": false,
  "git_panel": {
    "status_style": "label_color",
    "collapse_untracked_diff": true,
    "dock": "right",
  },
  "git": {
    "hunk_style": "staged_hollow",
    "inline_blame": {
      "show_commit_summary": false,
      "enabled": false,
    },
  },
  "inlay_hints": {
    "show_background": false,
  },
  "tab_size": 2,
  "toolbar": {
    "code_actions": false,
    "agent_review": true,
    "selections_menu": false,
    "quick_actions": true,
    "breadcrumbs": true,
  },
  "tabs": {
    "git_status": true,
    "show_diagnostics": "errors",
    "file_icons": true,
  },
  "icon_theme": "Icons modern material (Dark)",
  "terminal": {
    "font_size": 14.0,
    "dock": "left",
    "shell": {
      "program": "C:\\Program Files\\Git\\bin\\bash.exe",
    },
  },
  "buffer_font_weight": 500.0,
  "vim_mode": true,
  "project_panel": {
    "hide_root": true,
    "dock": "right",
  },
  "file_scan_exclusions": ["node_modules", ".git"],
  "buffer_font_family": "Hack Nerd Font",
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 15.0,
  "theme": {
    "mode": "system",
    "light": "Ayu Light",
    "dark": "Monokai Night",
  },
  "formatter": "prettier",
  // "languages": {
  //   "JavaScript": {
  //     "formatter": "prettier",
  //   },
  //   "TypeScript": {
  //     "formatter": "prettier",
  //   },
  //   "JSON": {
  //     "formatter": "prettier",
  //   },
  // },
  "prettier": {
    "allowed": true,
    "trailingComma": "es5",
    "semi": true,
    "tabWidth": 2,
    "printWidth": 80,
  },
}
