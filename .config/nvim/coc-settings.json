{
  "suggest.maxCompleteItemCount": 10,
  "diagnostic.warningSign": "",
  "diagnostic.hintSign": "ﯦ",
  "diagnostic.infoSign": "",
  "diagnostic.errorSign": "✖",
  "explorer.width": 35,
  "explorer.file.root.template": "[icon & 1][root]",
  "explorer.file.child.template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [filename omitCenter 1]",
  "explorer.file.autoReveal": false,
  "explorer.icon.enableVimDevicons": true,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.position": "left",
	"explorer.quitOnOpen": true,
  "explorer.sources": [
    {
      "name": "file",
      "expand": true
    }
  ],

  "explorer.keyMappings.global": {
    "i": false,
    "*": "toggleSelection",
    "<tab>": "actionMenu",
    "<leader><cr>": "collapse:recursive",
    "<cr>": ["expandable?", ["expanded?", "collapse", "expand"], "open"],
    "s": "open:vsplit",
    "t": "open:tab",
    "<C-Up>": "select",
    "<C-Down>": "unselect",
    "y": "copyFilepath",
    "Y": "copyFilename",
    "c": "copyFile",
    "x": "cutFile",
    "p": "pasteFile",
    "d": "delete",
    "D": "deleteForever",

    "a": "addFile",
    "A": "addDirectory",
    "r": "rename",

    ".": "toggleHidden",
    "R": "refresh",

    "?": "help",
    "q": "quit",
    "<esc>": "esc",
    "f": "search",
    "F": "searchRecursive",

    "gf": "gotoSource:file",
    "gb": "gotoSource:buffer",

    "<<": "gitStage",
    ">>": "gitUnstage"
  }
}
